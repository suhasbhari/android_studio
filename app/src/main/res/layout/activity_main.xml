<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Status: Disabled"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColorHighlight="@color/material_dynamic_primary30"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvAlarmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Alarm: Default"
        android:textSize="16sp"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TURN ON ALARM"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Alarm Sound"
        android:textSize="18sp"
        android:padding="16dp"/>

</LinearLayout>